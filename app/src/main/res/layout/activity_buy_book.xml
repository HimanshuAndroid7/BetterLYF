<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.BuyBookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.betterlyf.app.helper.CustomTextView
                android:id="@+id/txt_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light"
                android:gravity="center"
                android:paddingTop="@dimen/_60sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:text="Introducing Our First Self-Help Book"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/left" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_below="@+id/txt_heading"
                android:src="@drawable/broken_book"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/img_book"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/txt_book"
                android:textStyle="italic"
                android:lineSpacingExtra="@dimen/_1sdp"
                android:layout_below="@+id/img_book"
                android:letterSpacing="0.1"
                android:id="@+id/txt_describe"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_describe"
                android:id="@+id/txt_motive"
                android:text="Broken; Inspired By Unadulterated Life Kindle Edition"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_motive"
                android:id="@+id/txt_book_description"
                android:text="@string/txt_desctiption_book"
                android:textSize="@dimen/_13sdp"/>

            <com.betterlyf.app.helper.CustomTextView
                android:id="@+id/txt_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_book_description"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/rectangle_background_circle"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Buy Book"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>