<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.TopicDescriptionActivity">


    <com.betterlyf.app.helper.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/_60sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:background="@color/light"
            android:text="Dealing With Pre Marital Jitters"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:id="@+id/txt_heading"
            android:textColor="@color/black"/>

    <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/left"
            android:padding="@dimen/_12sdp"
            android:id="@+id/img_back"
            android:layout_margin="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <com.betterlyf.app.helper.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="This wellness program has 5 steps"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/txt_sub_heading"
            app:layout_constraintTop_toBottomOf="@+id/txt_heading"
            android:textColor="@color/textColor"/>

    <com.betterlyf.app.helper.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_sub_heading"
            android:layout_margin="@dimen/_30sdp"
            android:text="@string/topic"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/txt_description"
            android:textColor="@color/textColor"/>


    <com.betterlyf.app.helper.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Begin Now"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/txt_begin"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_background_guest"
            app:layout_constraintTop_toBottomOf="@+id/txt_description"/>

    <com.betterlyf.app.helper.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txt_or"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_begin"/>



    <com.betterlyf.app.helper.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/txt_resume"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_background"
            app:layout_constraintTop_toBottomOf="@+id/txt_or"/>



</androidx.constraintlayout.widget.ConstraintLayout>