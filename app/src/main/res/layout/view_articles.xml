<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:id="@+id/layout_article"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_135sdp"
                android:src="@drawable/stress"
                android:scaleType="fitXY"
                android:id="@+id/img_article"/>

            <com.betterlyf.app.helper.CustomTextView
                android:id="@+id/txt_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:background="@color/black"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_alignLeft="@id/img_article"
                android:layout_alignTop="@id/img_article"
                android:layout_alignRight="@id/img_article"
                android:layout_alignBottom="@id/img_article"
                android:layout_below="@+id/img_banner"
                android:alpha="0.8"
                android:textStyle="bold"
                android:text="Cope With Depression, Stress and Anxiety"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:lineSpacingExtra="@dimen/_1sdp"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Some events in our life may leave us distressed, hurt or alone. And at times nothing can explain our difficult feelings and negative thoughts. Counseling helps you identify triggers and negative"
                android:layout_below="@+id/txt_heading"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/txt_description"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Read More"
                android:id="@+id/txt_read_more"
                android:layout_below="@+id/txt_description"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/signup_color"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>