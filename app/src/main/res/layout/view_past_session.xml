<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_margin="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_counselor"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/counselor" />


            <com.betterlyf.app.helper.CustomTextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/img_counselor"
                android:text="Counselor Nandita"
                android:visibility="gone"
                android:textColor="@color/signup_color"
                android:textSize="@dimen/_12sdp" />

            <com.betterlyf.app.helper.CustomTextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_minutes"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/img_counselor"
                android:text="25 May 2020 09:00 PM"
                android:textSize="@dimen/_11sdp" />

            <com.betterlyf.app.helper.CustomTextView
                android:id="@+id/txt_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/txt_name"
                android:layout_toRightOf="@+id/img_counselor"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="2 Chat Sessions"
                android:layout_marginRight="@dimen/_20sdp"
                android:textColor="@color/yellow"
                android:textSize="@dimen/_13sdp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>