<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_130sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/layout_main"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/counselor"
                android:id="@+id/img_counselor"/>


            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nandita"
                android:textSize="@dimen/_12sdp"
                android:layout_toRightOf="@+id/img_counselor"
                android:textColor="@color/signup_color"
                android:id="@+id/txt_name"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masters in Applied Psychology"
                android:layout_below="@+id/txt_name"
                android:layout_toRightOf="@+id/img_counselor"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/txt_comment"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/lightGrey"
                android:layout_below="@+id/img_counselor">

                <com.betterlyf.app.helper.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_online"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <com.betterlyf.app.helper.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8552 Happy Clients"
                    android:layout_below="@+id/txt_online"
                    android:textSize="@dimen/_11sdp"
                    android:id="@+id/txt_clients"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <com.betterlyf.app.helper.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:background="@drawable/rectangle_background_circle"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/txt_book"
                    android:layout_margin="@dimen/_10sdp"/>

            </RelativeLayout>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>