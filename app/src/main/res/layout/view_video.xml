<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"

            android:src="@drawable/video_shot" />

        <com.betterlyf.app.helper.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_video"
            android:letterSpacing="0.1"
            android:padding="@dimen/_10sdp"
            android:id="@+id/txt_video"
            android:text="THINGS I COULD SECRETLY TELL YOUR PARTNER"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/lightGrey"
            android:layout_below="@+id/txt_video"/>

    </RelativeLayout>

</RelativeLayout>