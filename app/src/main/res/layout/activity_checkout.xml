<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CheckoutActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/left"
        android:visibility="visible" />

    <com.betterlyf.app.helper.CustomTextView
        android:id="@+id/txt_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Your Counselling Plan"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:visibility="visible" />

    <com.betterlyf.app.helper.CustomTextView
        android:id="@+id/txt_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_heading"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Understand"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />

    <com.betterlyf.app.helper.CustomTextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_heading"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="₹ 1650"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14sdp" />

    <com.betterlyf.app.helper.CustomTextView
        android:id="@+id/txt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_plan"
        android:gravity="center"
        android:text="Chat"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_14sdp" />

    <com.betterlyf.app.helper.CustomTextView
        android:id="@+id/txt_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_type"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:letterSpacing="0.1"
        android:text="@string/describe"
        android:textSize="@dimen/_10sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/light"
        android:layout_below="@+id/txt_describe"
        android:layout_margin="@dimen/_10sdp"/>


    <com.betterlyf.app.helper.CustomTextView
        android:id="@+id/txt_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_describe"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="Amount Payable : ₹ 1650"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_14sdp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inp_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txt_apply"
        android:layout_below="@+id/txt_amount"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center">

        <com.betterlyf.app.helper.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount Coupon"
            android:inputType="number"
            android:maxLength="10"
            android:paddingBottom="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.betterlyf.app.helper.CustomTextView
        android:id="@+id/txt_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_amount"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/rectangle_background_circle"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

    <com.betterlyf.app.helper.CustomTextView
        android:id="@+id/txt_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inp_coupon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/rectangle_background_pink_circle"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Continue To Pay"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />


</RelativeLayout>