<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_centerHorizontal="true"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/guest_color"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:theme="@style/RatingBar"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:rating="5"
                android:id="@+id/rating_bar"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:src="@drawable/user_review"
                android:layout_below="@+id/rating_bar"
                android:layout_centerHorizontal="true"
                android:id="@+id/img_user"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collete Michael"
                android:textSize="@dimen/_12sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_user"
                android:textColor="@color/colorPrimary"
                android:id="@+id/txt_name"
                android:layout_margin="@dimen/_10sdp"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to BetterLyf and its a very amazing app. Welcome to BetterLyf and its a very amazing app. Welcome to BetterLyf and its a very amazing app."
                android:layout_below="@+id/txt_name"
                android:textSize="@dimen/_12sdp"
                android:letterSpacing="0.1"
                android:id="@+id/txt_comment"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>