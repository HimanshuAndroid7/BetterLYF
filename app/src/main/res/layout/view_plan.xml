<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_12sdp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_1sdp">

        <RelativeLayout
            android:id="@+id/layout_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="fitXY"
                android:src="@drawable/understand" />

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_below="@+id/img_set"
                android:text="Understand"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/txt_plan"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identify Negative Thoughts"
                android:id="@+id/txt_comment"
                android:layout_below="@+id/txt_plan"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightGrey"
                android:layout_below="@+id/txt_comment"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_describe"
                android:letterSpacing="0.1"
                android:text="@string/describe"
                android:layout_below="@+id/txt_comment"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/previous"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pre_price"
                android:layout_centerHorizontal="true"
                android:textColor="@color/yellow"
                android:background="@drawable/create_line"
                android:text="₹ 1850"
                android:layout_above="@+id/txt_price"
                android:textSize="@dimen/_20sdp"
                android:gravity="center"/>

            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_price"
                android:textColor="@color/colorPrimary"
                android:text="₹ 1650"
                android:layout_above="@+id/txt_begin"
                android:textSize="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"/>


            <com.betterlyf.app.helper.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:text="Begin Therapy"
                android:textSize="@dimen/_13sdp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@color/previous"
                android:id="@+id/txt_begin"
                android:textColor="@color/white"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>